<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#004D40"
            android:padding="16dp"
            android:text="Android Development Quiz 2018 Application"
            android:textAllCaps="true"
            android:textColor="#FFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="Q1. How to kill an activity in Android?"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/q1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="finish()"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="finishActivity(int requestCode)"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="kill()"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="Q2.An Android view group is a collection of views and other child groups"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q2_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/yes_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textColor="#004D40"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/no_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:textColor="#004D40"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="Q3.Which company developed android?"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type Here"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="Q4.What does httpclient.execute() returns in android?"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/q4_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Http entity"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q4_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Http response"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q4_question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Http result"
            android:textColor="#004D40"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="Q5. What is breakpoint in android?"
            android:textAllCaps="false"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/q5_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Breaks the application"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q5_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Breaks the development code"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/q5_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Breaks the execution"
            android:textColor="#004D40"
            android:textSize="16sp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:onClick="checkQuiz"
            android:text="Submit"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/next_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:onClick="ResetAll"
            android:text="Reset"
            android:textColor="#FFFF" />
    </LinearLayout>


</ScrollView>